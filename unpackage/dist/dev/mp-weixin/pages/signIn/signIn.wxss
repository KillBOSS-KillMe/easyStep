page {
  background-color: #fff;
}
.head {
  width: 670rpx;
  height: 92rpx;
  margin: 20rpx;
  padding: 40rpx 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background-color: #DCF8E8;
  border-radius: 20rpx;
}
.head .dayNmu {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  color: #43D182;
}
.head .dayNmu .title {
  font-size: 25rpx;
}
.head .dayNmu view {
  font-size: 29rpx;
  font-weight: 800;
}
.head .dayNmu view text {
  font-size: 25rpx;
}
.head .signinButton {
  width: 150rpx;
  height: 60rpx;
  font-size: 29rpx;
  border-radius: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.head .signin {
  background: -webkit-linear-gradient(left, #37c375, #58e998);
  background: linear-gradient(to right, #37c375, #58e998);
  color: #fff;
}
.head .already {
  background: -webkit-linear-gradient(left, #666666, #dddddd);
  background: linear-gradient(to right, #666666, #dddddd);
  color: #343434;
}
.dayShow {
  margin-top: 20rpx;
  width: 750rpx;
  height: auto;
  background-color: #fff;
  padding-bottom: 20rpx;
}
.dayShow .list {
  height: 215rpx;
  display: inline-block;
  width: 150rpx;
}
.dayShow .list view:nth-child(2) {
  margin: 16rpx 34rpx;
  width: 76rpx;
  height: 76rpx;
  border-radius: 38rpx;
  border: 1rpx solid #eee;
  background-color: #eee;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.dayShow .list image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 38rpx;
}
.dayShow .list view:nth-child(1),
.dayShow .list view:nth-child(3) {
  font-size: 30rpx;
  color: #606060;
  text-align: center;
}
.dayShow .list view:nth-child(3) {
  font-size: 25rpx;
}
.dayShowSelected view:nth-child(1),
.dayShowSelected view:nth-child(3) {
  color: #ff8000 !important;
}
.dayShowSelected view:nth-child(2) {
  background-color: #ff8000 !important;
}

